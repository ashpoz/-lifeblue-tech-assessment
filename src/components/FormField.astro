---
export interface Props {
  label: string;
  name: string;
  type: any;
  placeholder: string;
  required: boolean;
  options: Array<Object>;
}
const { element, label, name, type, placeholder, required, options } =
  Astro.props;
---

<div>
  {
    () => {
      const optionsEls = options?.map((option) => {
        return <option value={option.value}>{option.label}</option>;
      });
      {
        switch (element) {
          case "input":
            return (
              <>
                <span class="text-gray-700">{label}</span>
                <input
                  type={type}
                  name={name}
                  class="mt-1 block w-full"
                  placeholder={placeholder}
                  required={required}
                />
              </>
            );
          case "select":
            let selectOptions = options?.map((option) => {
              return <option value={option.value}>{option.label}</option>;
            });
            return (
              <label class="block">
                <span class="text-gray-700">Select</span>
                <select name="dropdown" class="mt-1 block w-full" required>
                  {selectOptions}
                </select>
              </label>
            );
          case "radio":
            let radioOptions = options?.map((option) => {
              return (
                <label class="inline-flex items-center">
                  <input
                    type="radio"
                    class="form-radio"
                    name="radio"
                    value={option.value}
                  />
                  <span class="ml-2">{option.label}</span>
                </label>
              );
            });
            return (
              <div class="flex flex-col">
                <span class="text-gray-700">{label}</span>
                {radioOptions}
              </div>
            );
          case "checkbox":
            let checkboxOptions = options?.map((option) => {
              return (
                <label class="inline-flex items-center">
                  <input
                    type="checkbox"
                    class="form-checkbox"
                    name="checkbox"
                  />

                  <span class="ml-2">{option.label}</span>
                </label>
              );
            });
            return (
              <label class="inline-flex items-center">{checkboxOptions}</label>
            );
          default:
            return;
        }
      }
    }
  }
</div>
